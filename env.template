# AI Image Creator - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===============================================
# OpenAI Configuration
# ===============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"

# ===============================================
# Firebase Web App Configuration
# ===============================================
# Get these from Firebase Console → Project Settings → General → Your apps
# After creating/selecting a web app, you'll see a config object with these values

NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef123456"

# ===============================================
# Firebase Admin SDK Configuration
# ===============================================
# Get these from the Service Account JSON file you download from:
# Firebase Console → Project Settings → Service accounts → Generate new private key

# This should be the same as NEXT_PUBLIC_FIREBASE_PROJECT_ID
FIREBASE_PROJECT_ID="your-project-id"

# From the JSON file: "client_email" field
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"

# From the JSON file: "private_key" field
# IMPORTANT: Keep the quotes and \n characters as-is
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBgkqhkiG9w0BAQEFAASCBKgwggSkAgEAAoIBAQC...\n-----END PRIVATE KEY-----\n" 